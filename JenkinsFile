pipeline {
    agent any
    stages {
        stage('Install Dependencies') { 
            steps {
                bat 'npm install newman'
                bat 'npm install newman-reporter-htmlextra'
            }
        }
        stage('Run API Tests') { 
            steps {
                bat 'npx newman run collections/BookingAPICollection.json -e collections/environments/BookingAPIEnv.json -r htmlextra -d collections/testdata/testData.json'
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'newman-report/report.html', allowEmptyArchive: true
        }
    }
}
