pipeline {
  agent any
  stages {
    stage('Build') { 
      steps {
        bat 'npm install -g newman'
        bat 'npm i newman-reporter-htmlextra'
      }
    }
    stage('Test') { 
      steps {
        bat 'newman run BookingAPICollection.json -e environments/BookingAPIEnv.json -r htmlextra -d testdata/testData.json'
      }
    }
  }
  post {
    always {
      archiveArtifacts artifacts: '**/report.html', allowEmptyArchive: true
    }
  }
}